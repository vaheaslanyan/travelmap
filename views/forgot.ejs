<% include partials/header %>

<div class="form-divs container">
	<h1>
		Forgot your password?
	</h1>

	<form action="/forgot" method="POST">
		<div class="form-group">
			<label for="email">Email</label>
			<input type="email" name="email" placeholder="email" autofocus class="form-control" required>
		</div>
		<div class="form-group">
			<input class="btn btn-primary form-button" type="submit" value="Reset Password">
		</div>
	</form>
	<div>
		<p>
			Remembered the password? <a href="/login">Log In.</a>
		</p>
	</div>
</div>

<% include partials/footer %>