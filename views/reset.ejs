<% include partials/header %>

<div class="form-divs container">
	<h1>
		Reset Password
	</h1>

	<form action="/reset/<%= token %>" method="POST">
		<div class="form-group">
			<label for="password">New Password</label>
				<input type="password" name="password" placeholder="New password" autofocus="autofocus" class="form-control" required>
		</div>
		<div class="form-group">
			<label for="confirm-password">Confirm Password</label>
				<input type="password" name="confirm-password" placeholder="Confirm password" class="form-control" required>
		</div>
		<div class="form-group">
			<input class="btn btn-primary form-button" type="submit" value="Update Password">
		</div>
	</form>
</div>


<% include partials/footer %>