<% include partials/header %>

<div class="container">
	<div class="form-divs">
	<h1>
		Log In
	</h1>

	<form action="/login" method="POST">
		<div class="form-group">
			<label>Username</label>
			<input class="form-control" type="text" name="username" placeholder="marcopolo" required>
		</div>
		<div class="form-group">
			<label>Password</label>
			<input class="form-control" type="password" name="password" placeholder="********" required>	
		</div>
		<div class="form-group">
			<input class="btn btn-primary form-button btn-block" type="submit" value="Log me in">
		</div>
	</form>
	<div>
		<p>
			Do not have an account? <a href="/register">Sign Up.</a>
		</p>
		<p>
			Forgot your password? <a href="/forgot">Reset.</a>
		</p>
	</div>
</div>
</div>

<% include partials/footer %>